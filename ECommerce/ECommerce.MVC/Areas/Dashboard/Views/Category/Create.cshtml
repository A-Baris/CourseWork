@model CategoryVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="col-md-6 mx-auto">
    <!-- general form elements -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Kategori Bilgileri</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post">
            <div class="card-body">
                <div class="form-group">
                    <label >Kategori Ad</label>
                    <input type="text" class="form-control"  placeholder="kategori adı girin" asp-for="CategoryName">
                    <span asp-validation-for="CategoryName"></span>
                </div>
                <div class="form-group">
                    <label >Kategori Açıklama</label>
                    <textarea class="form-control" cols="5" rows="8" placeholder="kategori açıklama" asp-for="Description"></textarea>
                
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Kategori Oluştur</button>
            </div>
        </form>
    </div>
