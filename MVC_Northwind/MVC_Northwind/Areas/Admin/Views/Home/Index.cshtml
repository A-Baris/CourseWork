@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>#xx</th>
            <th>Username</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Users != null)
        {
            @foreach (var user in ViewBag.Users as List<MVC_Northwind.Models.Entity.AppUser>)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a href="/Home/Assignrole/@user.Id" class="btn btn-success">Yeki Ata</a>
                    </td>
                    <td>
                        <a href="/Home/AssignRole/@user.Id" class="btn btn-success">####</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">
                    <span>Herhangi bir üye buluanamadı!</span>
                </td>
            </tr>
        }
    </tbody>
</table>
