
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title text-center">@ViewData["Title"]</h1>
             <p class="lead">Bizimle iletişime geçmekten çekinmeyin! Herhangi bir soru, öneri veya talebiniz varsa, aşağıdaki iletişim formunu kullanarak bize ulaşabilirsiniz.</p>
<form>
        <div class="mb-3">
            <label for="name" class="form-label">Adınız Soyadınız</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">E-posta Adresiniz</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Mesajınız</label>
            <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Gönder</button>
    </form>

        </div>
    </div>
</div>

